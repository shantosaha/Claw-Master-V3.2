{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Auto-Commit Watcher",
            "type": "shell",
            "command": "./auto_commit_watcher.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Stop Auto-Commit Watcher",
            "type": "shell",
            "command": "pkill -f auto_commit_watcher.sh || echo 'Watcher not running'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "View Auto-Commit Log",
            "type": "shell",
            "command": "tail -50 .git/auto_commit.log",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}